<!DOCTYPE html>
<html lang="en">

{% include './../blocks/head.twig' %}

<body>
    <style>
        .modal {
            z-index: 1;
            display: none;
            padding-top: 10px;
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.8)
        }

        .modal-content {
            margin: auto;
            display: block;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }


        .modal-hover-opacity {
            opacity: 1;
            filter: alpha(opacity=100);
            -webkit-backface-visibility: hidden
        }

        .modal-hover-opacity:hover {
            opacity: 0.60;
            filter: alpha(opacity=60);
            -webkit-backface-visibility: hidden
        }


        .close {
            text-decoration: none;
            float: right;
            font-size: 24px;
            font-weight: bold;
            color: white
        }

        .container1 {
            width: 200px;
            display: inline-block;
        }

        .modal-content,
        #caption {

            -webkit-animation-name: zoom;
            -webkit-animation-duration: 0.6s;
            animation-name: zoom;
            animation-duration: 0.6s;
        }


        @-webkit-keyframes zoom {
            from {
                -webkit-transform: scale(0)
            }

            to {
                -webkit-transform: scale(1)
            }
        }

        @keyframes zoom {
            from {
                transform: scale(0)
            }

            to {
                transform: scale(1)
            }
        }
    </style>

    {% include './../blocks/navbar.twig' %}
    <!--breadcrumbs-->
    <div class="breadcrumbs">
        <div class="container">
            <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
                <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
                <li class="active">Products</li>
            </ol>
        </div>
    </div>
    <!--//breadcrumbs-->
    <!--products-->
    <div class="products">
        <div class="container">
            <div class="col-md-9 product-model-sec">

                {% for product in products %}
                <div id="modal01" class="modal" onclick="this.style.display='none'">
                    <span class="close">&times;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                    <div class="modal-content">
                        <img id="img01" style="max-width:100%">
                    </div>
                </div>
                <div class="product-grids simpleCart_shelfItem wow fadeInUp animated"
                    style="margin:5px;border-radius:25px; max-width:363px!important;height:380px!important;"
                    data-wow-delay=".5s">
                    <div class="new-top imgcenter">
                        <!-- image goes here -->
                        <img alt="{{ product.name }}" src="{{ product.image }}"
                            style="border-radius:25px;max-height:165px;cursor:pointer;" onclick="onClick(this)"
                            class="modal-hover-opacity img-responsive" alt="" />

                    </div>


                    <script>function onClick(element) {
                            document.getElementById("img01").src = element.src;
                            document.getElementById("modal01").style.display = "block";
                        }</script>


                    <div class="new-bottom text-center">
                        <!-- Product title and price goes here -->
                        <h5 class="name">{{ product.name }}</h5>
                        <p>{{ product.content }}</p>
                        <div class="ofr" style="margin-top:25px;">
                            <h2><span class="item_price">{{ product.price }}kr</span></h2>
                        </div>
                        <!-- product data goes here -->
                        <button style="margin-top:25px;" class="btn btn-primary snipcart-add-item"
                            data-item-name="{{ product.name }}" data-item-image="{{ product.image }}"
                            data-item-weight="{{ product.weight }}" data-item-url="{{ product.url }}"
                            data-item-price="{{ product.price }}" data-item-id="{{ product.id }}" href="">Add
                            to
                            cart</button>
                    </div>

                </div>



                {% endfor %}
            </div>
            {% include './../blocks/product-sidebar.twig' %}
            <div class="clearfix"> </div>
        </div>
    </div>

    <!--//products-->
    {% include './../blocks/footer.twig' %}
    {% include './../blocks/scripts.twig' %}

</body>

</html>