<section class="crypto-section token-section" id="section1">
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div
                class="col-md-10 d-flex flex-column justify-content-between align-items-center crypto-section__content">
                <div class="row w-100">
                    <div class="col-md-12 text-center">
                        <h1 class="section-title title">b<span>ARK</span> Distribution</h1>
                    </div>
                </div>
                <div class="row w-100">
                    <div class="col-md-12">
                        <div class="token-sale__graph">
                            <div class="token-sale__graph-ico"></div>
                            <div class="token-sale__graph-ico__shadow"></div>
                            <div class="text-center token-sale__graph-info">
                                <h5>80% bARK</h5>
                                <span>Community</span>
                            </div>
                            <div class="text-center token-sale__graph-info">
                                <h5>something </h5>
                                <span>x</span>
                            </div>
                            <div class="text-center token-sale__graph-info">
                                <h5>something </h5>
                                <span>x</span>
                            </div>
                            <div class="text-center token-sale__graph-info">
                                <h5>something </h5>
                                <span>x</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row w-100">
                    <!-- sale start -->
                    <div class="col-md-12 col-lg-4 token-sale__time">
                        <span>Start Distribution</span>
                        <b>April 1 2018 - 11:00 AM GMT</b>
                    </div>
                    <!-- sale timer countdown -->
                    <div class="col-md-12 col-lg-4 text-center token-sale__time">
                        <!-- !!!data countdown: change your countdown timer -->
                        <ul class="d-flex align-self-center justify-content-center countdown"
                            data-countdown="06/12/2018 12:00:00" id="counter">
                            <li>
                                <span class="days">00</span>
                                <p class="days_ref">days</p>
                            </li>
                            <li class="separator">:</li>
                            <li>
                                <span class="hours">00</span>
                                <p class="hours_ref">hours</p>
                            </li>
                            <li class="separator">:</li>
                            <li>
                                <span class="minutes">00</span>
                                <p class="minutes_ref">minutes</p>
                            </li>
                            <li class="separator">:</li>
                            <li>
                                <span class="seconds">00</span>
                                <p class="seconds_ref">seconds</p>
                            </li>
                        </ul>
                        <p>left until distribution starts</p>
                    </div>
                    <!-- sale end -->
                    <div class="col-md-12 col-lg-4 text-right token-sale__time">
                        <span>End</span>
                        <b>April 21 2018 - 5:00 PM GMT</b>
                    </div>
                </div>
                <!-- call to action btn -->
                <div class="row w-100">
                    <div class="col-md-12 text-center">
                        <a href="#" class="btn btn-danger">some button</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
